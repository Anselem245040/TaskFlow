# =========
# Application configuration
# =========

APP_ENV=development
APP_PORT=3000
API_PREFIX=api/v1

# ==========
# DATABASE CONFIGURATION 
# ==========

DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=taskflow_user
